    start: {x: 50, y: 15}
    end: {x: 51, y: 15}
    checkRequirements: 0
    tutorialMap:
      texture: {fileID: 2800000, guid: 72eca0067e4b09149a6286ec48422fd4, type: 3}
      coordinates: {x: 0, y: 0}
    keyframes: []
  - text: The best way to mantain a high <color=#62B4E8>safety</color> level is to
      cross the streets at intersections marked by traffic lights.
    destroyRequirement: 0
    start: {x: 52, y: 15}
    end: {x: 49, y: 18}
    checkRequirements: 0
    tutorialMap:
      texture: {fileID: 2800000, guid: 145d812b775d840439a694223d3a92ba, type: 3}
      coordinates: {x: 0, y: 0}
